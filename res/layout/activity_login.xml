<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/headactionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        layout="@layout/include_apphead" />

    <LinearLayout
        android:id="@+id/ll_login_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headactionbar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/et_login_wifiimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_wifi_notconn" >
        </ImageView>

        <LinearLayout
            android:id="@+id/ll_login_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_psw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login_body"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/bt_login_actionl"
            android:layout_width="115dp"
            android:textColor="#ffffff"
            android:background="@drawable/btnselected"
            android:layout_height="50dp"
            android:text="@string/connectnow" />

        <Button
            android:id="@+id/bt_register_actionl"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:background="@drawable/difbtnselected"
            android:layout_marginLeft="25dp"
            android:text="@string/regisiternow" />
    </LinearLayout>

</RelativeLayout>